<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parent_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="@dimen/main_margin"
            android:layout_marginEnd="@dimen/main_margin"
            android:layout_marginTop="@dimen/content_margin"
            android:layout_marginBottom ="@dimen/content_margin"
            android:textAppearance="@style/BoldTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/image_detail"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Move Title"/>

        <ImageView
            android:id="@+id/image_detail"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/image_margin"
            android:layout_marginEnd="@dimen/image_margin"
            android:layout_marginTop="@dimen/content_margin"

            app:layout_constraintBottom_toTopOf="@+id/text_view_overview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_detail_title" />

        <TextView
            android:id="@+id/text_detail_overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/main_margin"
            android:layout_marginEnd="@dimen/main_margin"
            android:layout_marginTop="@dimen/content_margin"
            android:textAppearance="@style/ItalicType"
            android:textSize="@dimen/overview_size"
            app:layout_constraintBottom_toTopOf="@id/text_detail_release"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_detail"
            app:layout_constraintVertical_bias="0.03"
            tools:text="Good Movie to be seen ......" />

        <TextView
            android:id="@+id/text_movie_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/main_margin"
            android:layout_marginEnd="@dimen/main_margin"
            android:layout_marginTop="@dimen/content_margin"
            android:textAppearance="@style/ItalicType"
            android:textSize="@dimen/release_size"
            app:layout_constraintBottom_toTopOf="@+id/text_detail_release"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_detail_overview"
            app:layout_constraintVertical_bias="0.0"
            tools:text="337401 ......" />

        <TextView
            android:id="@+id/text_popularity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/main_margin"
            android:layout_marginEnd="@dimen/main_margin"
            android:layout_marginTop="@dimen/content_margin"
            android:textAppearance="@style/ItalicType"
            android:textSize="@dimen/release_size"
            app:layout_constraintBottom_toTopOf="@+id/text_detail_release"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_movie_id"
            app:layout_constraintVertical_bias="0.0"
            tools:text="2967.124 ......" />

        <TextView
            android:id="@+id/text_vote_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/main_margin"
            android:layout_marginTop="@dimen/content_margin"
            android:layout_marginEnd="@dimen/main_margin"
            android:textAppearance="@style/ItalicType"
            android:textSize="@dimen/release_size"
            app:layout_constraintBottom_toTopOf="@+id/text_detail_release"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_popularity"
            app:layout_constraintVertical_bias="0.0"
            tools:text="2967 ......" />

        <TextView
            android:id="@+id/text_vote_average"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/main_margin"
            android:layout_marginEnd="@dimen/main_margin"
            android:layout_marginTop="@dimen/content_margin"
            android:textAppearance="@style/ItalicType"
            android:textSize="@dimen/release_size"
            app:layout_constraintBottom_toTopOf="@+id/text_detail_release"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_vote_count"
            app:layout_constraintVertical_bias="0.0"
            tools:text="2967.124 ......" />

        <TextView
            android:id="@+id/text_original_language"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/main_margin"
            android:layout_marginTop="@dimen/content_margin"
            android:layout_marginEnd="@dimen/main_margin"
            android:textAppearance="@style/ItalicType"
            android:textSize="@dimen/release_size"
            app:layout_constraintBottom_toTopOf="@+id/text_detail_release"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_vote_average"
            app:layout_constraintVertical_bias="0.0"
            tools:text="2967.124 ......" />

        <TextView
            android:id="@+id/text_original_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/main_margin"
            android:layout_marginTop="@dimen/content_margin"
            android:layout_marginEnd="@dimen/main_margin"
            android:textAppearance="@style/ItalicType"
            android:textSize="@dimen/release_size"
            app:layout_constraintBottom_toTopOf="@+id/text_detail_release"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_original_language"
            tools:text="2967.124 ......" />

        <TextView
            android:id="@+id/text_detail_release"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/release_size"
            android:layout_marginStart="@dimen/main_margin"
            android:layout_marginEnd="@dimen/main_margin"
            android:layout_marginTop="@dimen/content_margin"
            android:layout_marginBottom="@dimen/content_margin"
            android:textAppearance="@style/ItalicType"
            app:layout_constraintTop_toBottomOf="@id/text_original_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Realsed in 1994 ......" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>
